<template name='postItem'>
<view class='welcome-container'>
    <view class='welcome-author-date'>
      <image class='welcome-author' src='{{ item.headImgSrc }}'></image>
      <text class='welcome-date'>{{item.date}}</text>
    </view>
    <text class='welcome-title'>{{idx}}-{{item.title}}</text>
    <image wx:if="{{true}}" class='welcome-image' src='{{item.imgSrc}}'></image>
    <text class='welcome-content'>{{item.content}}</text>
    <view class='welcome-like'>
      <image class='welcome-like-image' src='../../images/icon/chat.png'></image>
      <text class='welcome-like-font'>{{item.reading}}</text>
      <image class='welcome-like-image' src='../../images/icon/view.png'></image>
      <text class='welcome-like-font'>{{item.collection}}</text>
    </view>
</view>
</template>