/* pages/home/home.wxss */
swiper{
  width: 100%;
  height: 600rpx;
}
swiper image{
  width: 100%;
  height: 600rpx;
}
.welcome-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
.welcome-author-date{
  margin: 10rpx 0rpx 20rpx 10rpx;
}
.welcome-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.welcome-date{
  margin-left: 20rpx;
  margin-bottom: 5px;
  vertical-align: middle;
  font-size: 26rpx;
}
.welcome-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.welcome-image{
  margin-left: 16px;
  width: 100%;
  height: 340rpx;
  margin: 0 auto;
  margin-bottom: 15px;
}
.welcome-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.welcome-like{
  display: flex;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.welcome-like-image{
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.welcome-like-font{
  vertical-align: middle;
  margin-right: 20px;
}

